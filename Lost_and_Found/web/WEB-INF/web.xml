<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <servlet-class>controller.LoginGoogleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageController</servlet-name>
        <servlet-class>controller.PageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailArticleController</servlet-name>
        <servlet-class>controller.DetailArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TypePostController</servlet-name>
        <servlet-class>controller.TypePostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <url-pattern>/LoginGoogleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageController</servlet-name>
        <url-pattern>/PageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailArticleController</servlet-name>
        <url-pattern>/DetailArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TypePostController</servlet-name>
        <url-pattern>/TypePostController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>PageController</welcome-file>
    </welcome-file-list>
</web-app>
